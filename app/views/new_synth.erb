    <label>Sustain:</label><input name="synth[osc][][sustain]" type="range" id="voice2_sustain_slider" min="0" max=".5" value="0" step=".01">
    <label>Release:</label><input name="synth[osc][][release]" type="range" id="voice2_release_slider" min=".01" max="2" value=".01" step=".01">
    <label>Detune:</label><input name="synth[osc][][detune]" type="range" id="voice2_detune_slider" min="-1200" max="1200" value="0" step="100">
