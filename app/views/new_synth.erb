<script src="https://unpkg.com/@webcomponents/webcomponentsjs@^2/webcomponents-bundle.js"></script>
<script src="https://unpkg.com/tone"></script>
<script src="https://unpkg.com/@tonejs/ui"></script>
<link rel="stylesheet" href="/stylesheets/synth.css" />

<tone-keyboard  octaves="3"></tone-keyboard>
<form method="POST" action="/synths/new">
    <input type="text" name="name" value="Enter a Name!">
    <br>
    <select name="synth[osc][][type]" id="voice1_type_dropdown">
        <option value="sine" onchange="typechange()">sine</option>
        <option value="sawtooth" onchange="typechange()">sawtooth</option>
        <option value="square" onchange="typechange()">square</option>
        <option value="triangle" onchange="typechange()">triangle</option>
    </select>
    <br>
    <label>Attack:</label><input name="synth[osc][][attack]" type="range" id="voice1_attack_slider" min="0" max="2" value="0" step=".01">
    <label>Decay:</label><input name="synth[osc][][decay]" type="range" id="voice1_decay_slider" min="0" max="2" value="0" step=".01">
    <label>Sustain:</label><input name="synth[osc][][sustain]" type="range" id="voice1_sustain_slider" min="0" max="1" value="0" step=".01">
    <label>Release:</label><input name="synth[osc][][release]" type="range" id="voice1_release_slider" min=".01" max=".5" value=".01" step=".01">
    <label>Detune:</label><input name="synth[osc][][detune]" type="range" id="voice1_detune_slider" min="-1200" max="1200" value="0" step="100">
